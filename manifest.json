{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0.0",
  "description": "Description of your extension",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting"],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "host_permissions": ["https://*/*", "http://*/*"]
}
